const benefits = [
  {
    title: 'Enfoque en el sector salud colombiano',
    description: 'Conocemos la normativa, los procesos y las necesidades de clínicas, hospitales e instituciones de salud en Colombia.'
  },
  {
    title: 'Seguridad de la información',
    description: 'Datos sensibles protegidos con buenas prácticas, respaldo y cumplimiento de estándares de privacidad y seguridad.'
  },
  {
    title: 'Arquitectura escalable',
    description: 'Soluciones que crecen con su institución, desde una clínica pequeña hasta un hospital de alta complejidad.'
  },
  {
    title: 'Integraciones con sistemas existentes',
    description: 'Conectamos con equipos, laboratorios, facturación y otros sistemas para un flujo de trabajo integrado.'
