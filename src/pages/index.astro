import Header from '../components/layout/Header.astro'
import Footer from '../components/layout/Footer.astro'
import HeroSection from '../components/sections/HeroSection.astro'
import ServicesSection from '../components/sections/ServicesSection.astro'
import ProductsSection from '../components/sections/ProductsSection.astro'
import BenefitsSection from '../components/sections/BenefitsSection.astro'
import AboutSection from '../components/sections/AboutSection.astro'
import TrustSection from '../components/sections/TrustSection.astro'
import CTASection from '../components/sections/CTASection.astro'
---

<BaseLayout
  title="Desarrollo de Software Médico en Colombia | Tecpromed SAS"
  description="Tecpromed SAS: desarrollo de software médico a la medida, alquiler de equipos médicos y soluciones SaaS para clínicas y hospitales en Colombia. Transformación digital en salud."
  canonicalPath=""
>
  <Header />
  <main>
    <HeroSection />
    <ServicesSection />
    <ProductsSection />
    <BenefitsSection />
