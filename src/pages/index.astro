<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'Tecpromed SAS',
  description: 'Desarrollo de software médico, alquiler de equipos médicos y soluciones SaaS para clínicas y hospitales en Colombia.',
